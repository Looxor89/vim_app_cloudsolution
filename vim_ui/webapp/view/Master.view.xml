<mvc:View
    displayBlock="true"
    controllerName="vim_ui.controller.Master"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    class="sapUiSizeCompact"
    xmlns:ui="sap.ui.unified"
    busyIndicatorDelay="0">

    <!-- Dynamic Page Structure -->
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="true" headerExpanded="true">
        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>DynamicPageTitle}" textAlign="Center" />
                </f:heading>
                <f:actions>
                    <!-- Add any actions like buttons if needed -->
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <!-- Filter Bar for search and filters -->
                    <fb:FilterBar id="filterbar" reset="onReset" search="onGoPress" useToolbar="false" showGoOnFB="true" showClearOnFB="true" clear="onClearFilterBar" showFilterConfiguration="false">
                        <fb:filterGroupItems>

                            <!-- Document Status Filter -->
                            <fb:FilterGroupItem groupName="DefaultGroup" name="B" label="{i18n>DocumentStatus}" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox id="idSelectDocStatus" items="{path: 'prmodel>/filterProps/DocumentStatus'}">
                                        <core:Item key="{prmodel>id}" text="{prmodel>status}" />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Extraction Status Filter (currently hidden) -->
                            <fb:FilterGroupItem groupName="DefaultGroup" name="C" label="{i18n>ExtractionStatus}" visible="false" visibleInFilterBar="true">
                                <fb:control>
                                    <Select id="idSelectExtractionStatus" forceSelection="false" items="{prmodel>/filterProps/ExtractionStatus}">
                                        <core:Item key="{prmodel>id}" text="{prmodel>status}" />
                                    </Select>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Sent By Filter -->
                            <fb:FilterGroupItem groupName="DefaultGroup" name="D" label="{i18n>VendorName}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idSentByInp" />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Sent By Filter -->
                            <fb:FilterGroupItem groupName="DefaultGroup" name="E" label="{i18n>VATRegistrationNumber}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idVATRegistrationNumber" />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Assigned To Filter -->
                            <fb:FilterGroupItem groupName="DefaultGroup" name="F" label="{i18n>AssignedTo}" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idAssignedToInp" />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Document Category Filter -->
                            <fb:FilterGroupItem groupName="DefaultGroup" name="G" label="{i18n>DocumentCategory}" visibleInFilterBar="true">
                                <fb:control>
                                    <Select id="idSelectDocumentCategory" forceSelection="false" items="{prmodel>/filterProps/DocumentCategory}">
                                        <core:Item key="{prmodel>id}" text="{prmodel>status}" />
                                    </Select>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Received Between Filter (Date Range) -->
                            <fb:FilterGroupItem groupName="DefaultGroup" name="H" label="{i18n>ReceivedBetween}" visibleInFilterBar="true">
                                <fb:control>
                                    <DateRangeSelection id="idSentOn" displayFormat="long" />
                                </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>

            <!-- Document Table -->
            <Table
                id="masterTable"
                inset="false"
                items="{
                    path: 'masterModel>/list',
                    sorter: { path: 'LASTCHANGEDON', descending: true }
                }"
                growing="true"
                growingScrollToLoad="true"
                growingThreshold="50"
                mode="MultiSelect"
                updateFinished="onTableGrowing"
                selectionChange="onSelectionChange"
                alternateRowColors="true"
                class="sapFDynamicPageAlignContent sapUiLargeMarginBottom"
                autoPopinMode="true"
                fixedLayout="true"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar >
                        <ToolbarSpacer/>
                        <Button id="quickMassiveActionButton" icon="sap-icon://edit" text="{i18n>QuickMassiveEdit}" enabled="false" press="onQuickMassiveEditPress" tooltip="{i18n>MassiveActionTooltip}"/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <!-- Company Code Column -->
                    <Column hAlign="Initial" width="10%">
                        <Text text="{i18n>CompanyCode}" />
                    </Column>

                    <!-- Document Status Column -->
                    <Column hAlign="Initial" width="12%">
                        <Text text="{i18n>DocumentStatusColumn}" />
                    </Column>

                    <!-- ReceivedOn Column -->
                    <Column hAlign="Initial" width="16%">
                        <Text text="{i18n>ReceivedOn}" />
                    </Column>

                    <!-- Vendor name Column -->
                    <Column hAlign="Initial" width="15%">
                        <Text text="{i18n>VendorNameColumn}" />
                    </Column>

                    <!-- Vendor name Column -->
                    <Column hAlign="Initial" width="15%">
                        <Text text="{i18n>VATRegistrationNumberColumn}" />
                    </Column>

                    <!-- Assigned To Column -->
                    <Column hAlign="Initial" width="15%">
                        <Text text="{i18n>AssignedToColumn}" />
                    </Column>

                    <!-- Category Column -->
                    <Column hAlign="Initial" width="10%">
                        <Text text="{i18n>Category}" />
                    </Column>

                    <!-- Last Changed Column -->
                    <Column hAlign="Initial" width="17%">
                        <Text text="{i18n>LastChanged}" />
                    </Column>

                    <!-- Action Column -->
                    <Column hAlign="Initial" width="5%">
                        <Text text="{i18n>Action}" />
                    </Column>
                </columns>

                <!-- Table Items -->
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onListItemPress"
                        modelContextChange="onModelContextChange"
                        highlight="{path: 'masterModel>DOC_STATUS', formatter: '.formatter.statusText'}">
                        <cells>
                            <!-- Company Code and Description -->
                            <ObjectIdentifier title="{masterModel>COMPANYCODE}" text="{masterModel>COMPANYCODEDESC}" />
                            
                            <!-- Document Status and Actions -->
                            <ObjectIdentifier
                                title="{parts: ['masterModel>DOC_STATUS', 'masterModel>ASSIGNEDTO', 'masterModel>ACTIONBY', 'masterModel>'], formatter: '.formatter.formatDocStatus'}"
                                text="{parts: ['masterModel>ACTION', 'masterModel>ACTIONBYNAME', 'masterModel>'], formatter: '.formatter.calcStatus'}"
                            />
                            
                            <!-- Received on -->
                            <Text text="{path:'masterModel>CREATEDAT', formatter:'.formatter.formatDateString'}" />

                            <!-- VENDOR -->
                            <Text text="{masterModel>VENDOR_NAME}" />

                            <!-- VAT -->
                            <Text text="{masterModel>VAT}" />
                            
                            <!-- Assigned To Name -->
                            <Text text="{masterModel>ASSIGNEDTONAME}" />

                            <!-- Document Category -->
                            <Text text="{masterModel>DOCCATEGORY}" />

                            <!-- Last Changed and Last Changed By -->
                            <ObjectIdentifier
                                title="{path:'masterModel>LASTCHANGEDON', formatter:'.formatter.formatDateString'}"
                                text="{masterModel>LASTCHANGEDBYNAME}"
                            />

                            <!-- Edit Button -->
                            <Button tooltip="{i18n>EditButtonTooltip}" icon="sap-icon://edit" press="onQuickEditPress" type="Transparent" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar >
                <ToolbarSpacer />
                <Button type="Accept" text="{i18n>SubmitButton}" press="onSubmitPress"/>
            </OverflowToolbar>
        </f:footer>

    </f:DynamicPage>

</mvc:View>