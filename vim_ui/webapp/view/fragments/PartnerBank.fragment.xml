<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<SelectDialog 
		id="idPartnerBankDialog_VH" 
		noDataText="{i18n>NoBusinessPartnerBanksFound}"
		items="{path: 'detailDetailModel>/valuehelps/businessPartnerBanks'}"
		title="{i18n>TitleSearchBusinessPartnerBanks}"
		search="onSearchBusinessPartnerBanks"
		confirm="onConfirmBusinessPartnerBanks">
		<StandardListItem 
			title="{detailDetailModel>BankIdentification}" 
			description="{detailDetailModel>BankName} | {detailDetailModel>BankNumber} | {detailDetailModel>IBAN}"/>	
	</SelectDialog>
</core:FragmentDefinition>