<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<SelectDialog 
		id="idPayDialog_VH" 
		noDataText="{i18n>NoPaymentTermsFound}"
		items="{path: 'detailDetailModel>/valuehelps/paymentTerms'}"
		title="{i18n>TitleSearchPaymentTerms}"
		search="onSearchPayTerms"
		confirm="onConfirmPayTerms">
		<StandardListItem 
			title="{detailDetailModel>PaymentTerms}" 
			description="{detailDetailModel>PaymentTermsName}"/>	
	</SelectDialog>
</core:FragmentDefinition>