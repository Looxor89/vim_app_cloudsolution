<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<TableSelectDialog 
		id="idPOrefDialog_VH" 
        resizable="true"
		noDataText="{i18n>NoPOreferementsFound}"
		items="{path: 'detailDetailModel>/valuehelps/poReferements'}"
		title="{i18n>TitleSearchPOreferements}"
		search="onSearchPOreferements"
		confirm="onConfirmPOreferement">
        <ColumnListItem vAlign="Middle">
            <cells>
                <ObjectIdentifier
                    title="{detailDetailModel>PurchaseOrder}"/>
                <Text
                    text="{detailDetailModel>PurchaseOrderType}" />
                <Text
                    text="{detailDetailModel>PurchaseOrderDate}" />
                <Text
                    text="{detailDetailModel>Supplier}" />
                <Text
                    text="{detailDetailModel>DocumentCurrency}" />
            </cells>
        </ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="{i18n>PurchaseOrder}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End">
				<header>
					<Text text="{i18n>PurchaseOrderType}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="{i18n>PurchaseOrderDate}" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="{i18n>Supplier}" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="{i18n>Currency}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>