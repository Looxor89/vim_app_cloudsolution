<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<TableSelectDialog 
		id="idServiceEntrySheetRefDialog_VH" 
        resizable="true"
		noDataText="{i18n>NoServiceEntrySheetsFound}"
		items="{path: 'detailDetailModel>/valuehelps/serviceEntrySheetReferements'}"
		title="{i18n>TitleSearchServiceEntrySheets}"
		search="onSearchServiceEntrySheets"
		confirm="onConfirmServiceEntrySheet">
        <ColumnListItem vAlign="Middle">
            <cells>
                <ObjectIdentifier
                    title="{detailDetailModel>ServiceEntrySheet}"/>
                <Text
                    text="{detailDetailModel>CreatedByUser}" />
                <Text
                    text="{detailDetailModel>CreationDateTime}" />
                <Text
                    text="{detailDetailModel>PurchasingOrganization}" />
                <Text
                    text="{detailDetailModel>PurchasingGroup}" />
                <Text
                    text="{detailDetailModel>MaterialDocument}" />
                <Text
                    text="{detailDetailModel>MaterialDocumentYear}" />
                <Text
                    text="{detailDetailModel>PurchaseOrder}" />
                <Text
                    text="{detailDetailModel>Supplier}" />
            </cells>
        </ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="{i18n>To_SelectedServiceEntrySheets_ServiceEntrySheet}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End">
				<header>
					<Text text="{i18n>CreatedByUser}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="{i18n>CreationDateTime}" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="{i18n>PurchasingOrganization}" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="{i18n>PurchasingGroup}" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="{i18n>MaterialDocument}" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="{i18n>MaterialDocumentYear}" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="{i18n>PurchaseOrder}" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="{i18n>Supplier}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>