<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<SelectDialog 
		id="idCostCentersDialog_VH" 
		noDataText="{i18n>NoCostCentersFound}"
		items="{path: 'detailDetailModel>/valuehelps/costCenters'}"
		title="{i18n>TitleSearchCostCenters}"
		search="onSearchCostCenters"
		confirm="onConfirmCostCenter">
		<StandardListItem 
			title="{detailDetailModel>CostCenter}" 
			description="{detailDetailModel>CostCenterName} | {i18n>ValidityEndDate}: {detailDetailModel>ValidityEndDate}"/>	
	</SelectDialog>
</core:FragmentDefinition>