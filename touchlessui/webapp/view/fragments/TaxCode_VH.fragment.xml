			<Toolbar design="Info">
				<ToolbarSpacer />
				<Label text="Recommendations" />
				<Switch state="true" change="onSwitchKOSTL">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
			</Toolbar>
		</subHeader>

		<content>
			<!-- <List items="{path: 'appmodel>/valuehelps/KOSTLData'}" 
				visible="{= ${appmodel>/props/ior_kostl}}" mode="SingleSelectMaster" 
				selectionChange="onConfirmCostCenter2">
				<CustomListItem>
					<HBox>
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<Title text="{appmodel>KOSTL}" />
							<ObjectStatus class="sapUiSmallMarginBottom" title="Confidence" 
							text="{path:'appmodel>Conf', formatter: '.formatter.formatConf'}" 
							active="true" state="{path:'appmodel>Conf', formatter: '.formatter.formatConfState'}" 
							inverted="true" />
						</VBox>
					</HBox>
				</CustomListItem>
