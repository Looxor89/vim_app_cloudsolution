			<List items="{path: 'appmodel>/valuehelps/Taxcode'}" 
				visible="true" mode="SingleSelectMaster" id="iTaxCod_VH"
				selectionChange="onConfirmTaxCodeVH" includeItemInSelection="false">
				<CustomListItem>
					<HBox>
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<Title text="{appmodel>value}"/>
							<ObjectStatus class="sapUiSmallMarginBottom" title="Confidence" text="{path:'appmodel>probability', formatter: '.formatter.formatConf'}" active="true" state="{path:'appmodel>probability', formatter: '.formatter.formatConfState'}" inverted="true" />
						</VBox>
					</HBox>
				</CustomListItem>
			</List>
			<List items="{appmodel>/valuehelps/taxcode2}" visible="{= !${appmodel>/props/ior_kostl}}" mode="SingleSelectMaster"
				selectionChange="onConfirmTaxCode">
				<headerToolbar>
					<Toolbar>
						<SearchField search="onSearchCostCenter2" width="100%" placeholder="Tax Code #" visible="true" />
					</Toolbar>
				</headerToolbar>
				<StandardListItem
				title="{appmodel>Taxcode}"
				description="{appmodel>Text}" />
			</List>
		</content>

		<endButton>
			<Button text="Cancel" press="onCanceltaxCodeVH" />
		</endButton>
	</Dialog>
