<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
    <Dialog id="idPOLines_VH" title="Purchase Order Details">
        <subHeader>
            <Toolbar>
                <SearchField search="onPOSearch" width="100%" placeholder="Input complete PO Number - eg 4100000001"/>
            </Toolbar>
        </subHeader>

        <content>
            <l:Grid id="poHeaderBox0" class="sapUiResponsiveContentPadding sapUiTinyMargin">
                <ObjectAttribute title="Purchase Order" text="{Ebeln}" />
                <ObjectAttribute title="Purchasing Org." text="{Ekorg}" />
                <ObjectAttribute title="Company Code" text="{Bukrs}" />
                <ObjectAttribute title="Customer" text="{Kunnr}" />
                <ObjectAttribute title="Vendor" text="{Lifnr}" />
                <ObjectAttribute title="Document Category" text="{Bstyp}" />
                <ObjectAttribute title="Order Type" text="{Bsart}" />
                <ObjectAttribute title="Status" text="{Statu}" />
                <ObjectAttribute title="Payment Terms" text="{Zterm}" />
                <ObjectAttribute title="Payment in" text="{Zbd1t}" />
                <ObjectAttribute title="Payment in" text="{Zbd2t}" />
                <ObjectAttribute title="Payment in" text="{Zbd3t}" />
                <ObjectAttribute title="Currency" text="{Waers}" />
                <ObjectAttribute title="Deletion Indicator" text="{Loekz}" />
                <ObjectAttribute title="Created by" text="{Ernam}" />
                <ObjectAttribute title="Changed on" text="{path: 'Aedat', formatter:'.formatter.formatDateString'}" />
                <ObjectAttribute title="PO Date" text="{path: 'Bedat', formatter:'.formatter.formatDateString'}" />
                <ObjectAttribute title="Discount % 1" text="{Zbd1p}" />
                <ObjectAttribute title="Discount % 2" text="{Zbd2p}" />
            </l:Grid>
            <Table id="idVHPOLines" class="sapUiLargeMarginTop" items="{/polineitemSet}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Purchase Order Lines" level="H2" class="sapUiTinyMargin" />
                        <ToolbarSpacer />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Line #" />
                    </Column>
                    <Column>
                        <Text text="Material" />
                    </Column>
                    <Column>
                        <Text text="Material Group" />
                    </Column>
                    <Column>
                        <Text text="Plant" />
                    </Column>
                    <Column>
                        <Text text="Qty" />
                    </Column>
                    <Column>
                        <Text text="UoM" />
                    </Column>
                    <Column>
                        <Text text="Net Price" />
                    </Column>

                </columns>
                <items>
                    <ColumnListItem id="POlineItems" vAlign="Middle" type="Active" press="onPressPOLineItem">
                        <cells>
                            <Text text="{Ebelp}" />
                            <Text text="{Matnr} - {APModel>Txz01}" wrapping="true" />
                            <Text text="{Matkl}" />
                            <Text text="{Werks}" />
                            <Text text="{Menge}" />
                            <Text text="{Meins}" />
                            <Text text="{Netwr}" />
                        </cells>

                    </ColumnListItem>
                </items>
            </Table>

        </content>

        <endButton>
            <Button text="Cancel" press="onPOLinesDialogClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>