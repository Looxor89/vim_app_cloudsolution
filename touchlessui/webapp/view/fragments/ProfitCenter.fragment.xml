    <Dialog id="profitcenterDialog" title=" Search Profit Center help">
		<subHeader>
			<Toolbar design="Info">
				<ToolbarSpacer />
				<Label text="Recommendations" />
				<Switch state="true" change="onSwitchKOSTL">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
			</Toolbar>
		</subHeader>

		<content>
			
			<List items="{path: 'appmodel>/valuehelps/Profitcenters'}" 
				visible="true" mode="SingleSelectMaster" id="idProfitCenterVH"
				selectionChange="onConfirmProfitCenter">
				<CustomListItem>
					<HBox>
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<Title text="{appmodel>value}"/>
							<ObjectStatus class="sapUiSmallMarginBottom" title="Confidence" text="{path:'appmodel>probability', formatter: '.formatter.formatConf'}" active="true" state="{path:'appmodel>probability', formatter: '.formatter.formatConfState'}" inverted="true" />
						</VBox>
					</HBox>
				</CustomListItem>
			</List>
			<List visible="{= !${appmodel>/props/ior_kostl}}" mode="SingleSelectMaster"
				selectionChange="onConfirmProfitCenter">
				<headerToolbar>
					<Toolbar>
						<SearchField search="onSearchProfitCenter" width="100%" placeholder="Cost Center #" visible="true" />
					</Toolbar>
				</headerToolbar>
			</List>
			
		</content>

		<endButton>
			<Button text="Cancel" press="onCancelProfitCenter" />
		</endButton>
	</Dialog>
